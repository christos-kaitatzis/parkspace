<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:listDivider">@color/listColor</item>-->
        <item name="android:divider">@drawable/list_divider</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>


    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferencesTheme">
        <item name="colorPrimary">@color/dialogButton</item>
        <item name="colorPrimaryDark">@color/preferencesBackgroundDark</item>
        <item name="colorAccent">@color/dialogButton</item>
        <item name="android:windowBackground">@color/dialogButton</item>
        <item name="android:background">@color/preferencesBackground</item>
        <item name="android:textColor">#585858</item>
        <item name="android:keyTextSize">22sp</item>
        <item name="android:textColorPrimary">#616161</item>
        <item name="android:textColorSecondary">#616161</item>
        <item name="android:actionBarSize">70dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:labelTextSize">15sp</item>

        <item name="dialogTheme">@style/AppCompatDialog</item>
        <item name="alertDialogTheme">@style/AppCompatAlert</item>

        <item name="colorControlActivated">@color/switchColorEnabled</item>
    </style>

    <!-- Generic Dialog Theme -->
    <style name="AppCompatDialog">
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#616161</item>
        <!-- Used for the background -->
        <item name="android:background">#f0f0f0</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/dialogButton</item>
        <item name="colorControlHighlight">@color/dialogButton</item>

        <item name="colorPrimary">@color/dialogButton</item>
        <item name="colorPrimaryDark">@color/dialogButton</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AppCompatAlert">
        <item name="android:textColorPrimary">#616161</item>
        <!-- Used for the background -->
        <item name="android:background">#f0f0f0</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/dialogButton</item>
        <item name="colorControlHighlight">@color/dialogButton</item>

        <item name="colorPrimary">@color/dialogButton</item>
        <item name="colorPrimaryDark">@color/dialogButton</item>
    </style>

    <style name="NavigationDrawerStyle">
        <!--<item name="android:listDivider">@color/listColor</item>-->
        <item name="android:divider">@drawable/list_divider</item>
    </style>

    <style name="SwitchTheme">
        <!-- active thumb & track color (30% transparency) -->
        <!--<item name="colorControlActivated">#46bdbf</item>-->
        <item name="colorControlActivated">@color/switchColorEnabled</item>
        <!-- inactive thumb color -->
        <!--<item name="colorSwitchThumbNormal">#f1f1f1</item>-->

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>

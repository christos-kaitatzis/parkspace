    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/intro"
        android:gravity="center" >

